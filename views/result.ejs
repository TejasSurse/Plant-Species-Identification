<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Plant Identification Result</title>
  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link rel="manifest" href="/manifest.json">
  <meta name="theme-color" content="#4CAF50">

  <style>
    /* Root color palette */
    :root {
      --primary-color: #4CAF50;
      --background-gradient: linear-gradient(135deg, #00C853 0%, #B2FF59 100%);
      --text-color: #FFFFFF;
      --card-bg-color: #FFFFFF;
      --card-shadow-color: rgba(0, 0, 0, 0.1);
    }

    /* Full Page Styling */
    body {
      font-family: Arial, sans-serif;
      background: var(--background-gradient);
      color: var(--text-color);
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      margin: 0;
      overflow-x: hidden;
      background-attachment: fixed;
    }

    /* Main Container Styling */
    .container {
      background-color: rgba(255, 255, 255, 0.9);
      padding: 30px;
      border-radius: 15px;
      max-width: 600px;
      box-shadow: 0 10px 30px var(--card-shadow-color);
      animation: fadeIn 1s ease-out;
    }

    /* Heading Styling */
    h1 {
      color: var(--primary-color);
      text-align: center;
      font-size: 2.5em;
      margin-bottom: 20px;
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
    }

    /* Plant Information Styling */
    .result-card {
      background-color: var(--card-bg-color);
      color: #333;
      padding: 20px;
      border-radius: 12px;
      margin-top: 20px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      text-align: center;
      animation: slideUp 0.5s ease;
    }

    .result-card h3 {
      color: var(--primary-color);
      font-size: 1.5em;
      margin-bottom: 15px;
    }

    .result-card p {
      font-size: 1.2em;
      margin: 5px 0;
    }

    /* Back Button Styling */
    .back-btn {
      display: block;
      margin: 20px auto;
      text-align: center;
      font-size: 1.2em;
      padding: 10px 20px;
      color: var(--text-color);
      background-color: var(--primary-color);
      border-radius: 8px;
      text-decoration: none;
      transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .back-btn:hover {
      background-color: #66BB6A;
      transform: scale(1.05);
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
    }

    /* Animation Keyframes */
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes slideUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body>
  <!-- Main Content -->
  <div class="container">
    <h1>Plant Identification Result</h1>
    <!-- Result Card -->
    <div class="result-card">
      <h3>Scientific Name:</h3>
      <p><%= data.results[0].species.scientificName %></p>

      <h3>Common Names:</h3>
      <p><%= data.results[0].species.commonNames.join(', ') %></p>

      <h3>Identification Score:</h3>
      <p><%= (data.results[0].score * 100).toFixed(2) %>%</p>
    </div>

    <!-- Back Button -->
    <a href="/" class="back-btn">Go Back</a>
  </div>

  <!-- Bootstrap JS and jQuery -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
  <script>
    
    if ('serviceWorker' in navigator) {
    window.addEventListener('load', () => {
        navigator.serviceWorker.register('/service-worker.js').then(registration => {
            console.log('ServiceWorker registered with scope:', registration.scope);
        }).catch(error => {
            console.log('ServiceWorker registration failed:', error);
        });
    });
}

  </script>
</body>
</html>
