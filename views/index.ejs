<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Plant Identification</title>
  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link rel="manifest" href="/manifest.json">
  <meta name="theme-color" content="#4CAF50">

  <style>
    /* Root color palette */
    :root {
      --primary-color: #4CAF50;
      --secondary-color: #F0FFF4;
      --background-gradient: linear-gradient(135deg, #00C853 0%, #B2FF59 100%);
      --button-color: #81C784;
      --accent-color: #FFFFFF;
      --text-color: #333;
    }

    /* Full Page Styling */
    body {
      font-family: Arial, sans-serif;
      background: var(--background-gradient);
      color: var(--text-color);
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      margin: 0;
      overflow-x: hidden;
      background-attachment: fixed;
    }

    /* Navbar Styling */
    .navbar-custom {
      background-color: rgba(0, 0, 0, 0.7);
    }

    .navbar-brand, .nav-link {
      color: var(--accent-color) !important;
    }

    /* Main Container Styling */
    .container {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 30px;
      background-color: var(--secondary-color);
      padding: 40px;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      animation: fadeIn 1s ease-out;
      max-width: 800px;
      flex-direction: row-reverse;
    }

    /* Heading */
    h1 {
      color: var(--primary-color);
      font-size: 2em;
      margin-bottom: 20px;
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
    }

    /* Form Styling */
    form {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 20px;
    }

    /* Input Styling */
    input[type="file"] {
      padding: 8px;
      cursor: pointer;
      border: 2px dashed var(--primary-color);
      border-radius: 8px;
      transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    input[type="file"]:hover {
      border-color: var(--button-color);
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Button Styling */
    button {
      background-color: var(--primary-color);
      color: var(--accent-color);
      padding: 12px 20px;
      font-size: 1em;
      font-weight: bold;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: transform 0.3s ease, background-color 0.3s ease;
    }

    button:hover {
      background-color: var(--button-color);
      transform: scale(1.05);
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
    }

    /* Image Preview Styling */
    .preview-container {
      max-width: 300px;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    #imagePreview {
      display: none;
      width: 100%;
      height: auto;
      border-radius: 12px;
      margin-top: 10px;
      transition: opacity 0.5s ease;
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
    }

    /* Animation Keyframes */
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-20px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
    <a class="navbar-brand" href="#">Plant Identifier</a>
    <div class="ml-auto">
      
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container mt-5">
    <!-- Form Section -->
    <div class="form-container">
      <h1>Identify a Plant</h1>
      <form action="/submit" method="POST" enctype="multipart/form-data">
        <label for="image">Choose an image:</label>
        <input type="file" name="image" id="imageInput" accept="image/jpeg, image/png" required>
        <button type="submit">Identify Plant</button>
      </form>
    </div>

    <!-- Image Preview Section -->
    <div class="preview-container">
      <h3>Selected Image Preview:</h3>
      <img id="imagePreview" alt="Image Preview">
    </div>
  </div>

  <!-- Bootstrap JS and jQuery -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

  <!-- Image Preview Script -->
  <script>
    const imageInput = document.getElementById('imageInput');
    const imagePreview = document.getElementById('imagePreview');

    imageInput.addEventListener('change', () => {
      const file = imageInput.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = (e) => {
          imagePreview.src = e.target.result;
          imagePreview.style.display = 'block';
          imagePreview.style.opacity = '1';
        };
        reader.readAsDataURL(file);
      } else {
        imagePreview.style.display = 'none';
      }
    });

    
    if ('serviceWorker' in navigator) {
    window.addEventListener('load', () => {
        navigator.serviceWorker.register('/service-worker.js').then(registration => {
            console.log('ServiceWorker registered with scope:', registration.scope);
        }).catch(error => {
            console.log('ServiceWorker registration failed:', error);
        });
    });
    }

  </script>
</body>
</html>
